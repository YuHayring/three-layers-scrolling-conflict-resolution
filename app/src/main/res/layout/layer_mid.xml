<?xml version="1.0" encoding="utf-8"?>
<cn.hayring.threelayersscrollingconflict.LogTouchLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:tag="mid LinearLayout"
    >

    <com.google.android.material.tabs.TabLayout
        android:tag="mid TabLayout"
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:tag="mid ViewPager2"
        android:id="@+id/view_pager2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />



</cn.hayring.threelayersscrollingconflict.LogTouchLinearLayout>